<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center_horizontal" android:text="@string/raterecipetext" android:id="@+id/raterecipetext"></TextView>
    <RatingBar android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:id="@+id/raterecipebar" android:numStars="5" android:stepSize="0.5" android:layout_margin="32dip" android:isIndicator="false"></RatingBar>
    <Button android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:id="@+id/raterecipebutton" android:text="@string/raterecipebutton"></Button>
    
</LinearLayout>
