<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/buttons"
		android:layout_height="wrap_content"
		android:layout_weight="0" android:layout_gravity="center" android:layout_width="wrap_content">
		<Button android:layout_height="wrap_content" android:id="@+id/flipbookmode"
			android:text="@string/flipbookswitch" android:layout_gravity="center" 
			android:layout_width="wrap_content" android:layout_weight="0"/>
	</LinearLayout>
	<fragment android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:id="@+id/recipelistfragment" android:name="net.potterpcs.recipebook.RecipeListFragment">
		<!-- Preview: layout=@layout/recipelist -->
	</fragment>
	<TextView android:layout_weight="0" android:id="@+id/footertext"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_gravity="center"></TextView>
</LinearLayout>
