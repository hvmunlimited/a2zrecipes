<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/timesearchheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="16dip"
        android:text="@string/timesearchheader"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/searchminhours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timesearchheader"
        android:layout_below="@+id/timesearchheader"
        android:layout_marginTop="20dip"
        android:inputType="number"
        android:maxLength="2" >

        <requestFocus>
        </requestFocus>
    </EditText>

    <TextView
        android:id="@+id/searchminhtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchminhours"
        android:layout_alignBottom="@+id/searchminhours"
        android:layout_marginLeft="16dip"
        android:layout_toRightOf="@+id/searchminhours"
        android:text="@string/recipetimehours"
        android:textAppearance="?android:attr/textAppearanceMedium" >
    </TextView>

    <EditText
        android:id="@+id/searchminminutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchminhours"
        android:layout_marginRight="16dip"
        android:layout_toLeftOf="@+id/searchminmtext"
        android:inputType="number"
        android:maxLength="2" >
    </EditText>

    <TextView
        android:id="@+id/searchminmtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchminhours"
        android:layout_alignBottom="@+id/searchminhours"
        android:layout_alignRight="@+id/timesearchheader"
        android:text="@string/recipetimeminutes"
        android:textAppearance="?android:attr/textAppearanceMedium" >
    </TextView>

    <TextView
        android:id="@+id/timesearchmiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timesearchheader"
        android:layout_alignRight="@+id/timesearchheader"
        android:layout_below="@+id/searchminhours"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dip"
        android:gravity="center"
        android:text="@string/timesearchmiddle"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

    <EditText
        android:id="@+id/searchmaxhours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timesearchmiddle"
        android:layout_below="@+id/timesearchmiddle"
        android:layout_marginTop="20dip"
        android:inputType="number"
        android:maxLength="2" >
    </EditText>

    <TextView
        android:id="@+id/searchmaxhtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchmaxhours"
        android:layout_alignBottom="@+id/searchmaxhours"
        android:layout_alignLeft="@+id/searchminhtext"
        android:text="@string/recipetimehours"
        android:textAppearance="?android:attr/textAppearanceMedium" >
    </TextView>

    <EditText
        android:id="@+id/searchmaxminutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchmaxhours"
        android:layout_alignLeft="@+id/searchminminutes"
        android:inputType="number"
        android:maxLength="2" >
    </EditText>

    <TextView
        android:id="@+id/searchmaxmtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchmaxminutes"
        android:layout_alignBottom="@+id/searchmaxminutes"
        android:layout_toRightOf="@+id/searchminminutes"
        android:text="@string/recipetimeminutes"
        android:textAppearance="?android:attr/textAppearanceMedium" >
    </TextView>

    <Button
        android:id="@+id/timesearchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timesearchheader"
        android:layout_alignRight="@+id/timesearchheader"
        android:layout_below="@+id/searchmaxhours"
        android:layout_marginTop="16dip"
        android:minHeight="80dip"
        android:text="@string/timesearchbutton" >
    </Button>

    <TextView
        android:id="@+id/textspacer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/timesearchbutton"
        android:layout_alignRight="@+id/timesearchbutton"
        android:layout_below="@+id/timesearchbutton"
        android:minHeight="16dip" >
    </TextView>

</RelativeLayout>