<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.potterpcs.recipebook"
    android:versionCode="9"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="false"
        android:xlargeScreens="true" >
    </supports-screens>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:name="RecipeBook" >
        <activity
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:name=".RecipeBookActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
<!--             <intent-filter >
                <data
                    android:host="net.potterpcs.recipebook"
                    android:scheme="content" >
                </data>
            </intent-filter> -->
            <intent-filter >
                <action android:name="android.intent.action.SEARCH" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" >
            </meta-data>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".RecipeViewer" >
            <intent-filter >
                <action android:name="android.intent.action.VIEW" >
                </action>

                <data
                    android:host="net.potterpcs.recipebook"
                    android:scheme="content" >
                </data>

                <category android:name="android.intent.category.DEFAULT" >
                </category>
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".RecipeEditor" >
            <intent-filter >
                <action android:name="android.intent.action.INSERT_OR_EDIT" >
                </action>

                <category android:name="android.intent.category.DEFAULT" >
                </category>

                <data
                    android:host="net.potterpcs.recipebook"
                    android:scheme="content" >
                </data>
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".RecipeFlipbook" >
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".RecipeBookActivity" />
        <activity android:name=".ExporterActivity" android:label="@string/app_name"></activity>
        <service android:name=".CacheService"></service>
    </application>

</manifest>