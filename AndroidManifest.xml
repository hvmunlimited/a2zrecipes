<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.potterpcs.recipebook"
    android:versionCode="21"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="13" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="false"
        android:smallScreens="false"
        android:xlargeScreens="true" >
    </supports-screens>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_launcher"
        android:name="RecipeBook" android:uiOptions="splitActionBarWhenNarrow" android:theme="@style/atoz">
        <activity
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:name=".RecipeBookActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--
                 <intent-filter >
                <data
                    android:host="net.potterpcs.recipebook"
                    android:scheme="content" >
                </data>
            </intent-filter>
            -->
            <intent-filter >
                <action android:name="android.intent.action.SEARCH" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" >
            </meta-data>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".RecipeViewer" >
            <intent-filter >
                <action android:name="android.intent.action.VIEW" >
                </action>

                <data
                    android:host="net.potterpcs.recipebook"
                    android:scheme="content" >
                </data>

                <category android:name="android.intent.category.DEFAULT" >
                </category>

                <action android:name="net.potterpcs.recipebook.OPEN_RECIPE" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".RecipeEditor" >
            <intent-filter >
                <action android:name="android.intent.action.INSERT_OR_EDIT" >
                </action>

                <category android:name="android.intent.category.DEFAULT" >
                </category>

                <data
                    android:host="net.potterpcs.recipebook"
                    android:scheme="content" >
                </data>
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".RecipeFlipbook" >
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".RecipeBookActivity" />

        <activity
            android:label="@string/app_name"
            android:name=".ExporterActivity" >
        </activity>

        <service android:name=".CacheService" >
        </service>

        <activity
            android:label="@string/app_name"
            android:name=".ImporterActivity" >
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="*"
                    android:pathPattern=".*\\.rcp"
                    android:scheme="file" android:mimeType="*/*"/>
                <data
                    android:host="*"
                    android:pathPattern=".*\\.rcp"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.rcp"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:scheme="content" android:mimeType="*/*" android:pathPattern=".*\\.rcp"/>
                <category android:name="android.intent.category.BROWSABLE"/>

            </intent-filter>
        </activity>
        <activity android:name=".ImportFileListActivity" android:label="@string/app_name"></activity>
        <activity android:name=".Preferences" android:label="@string/app_name"></activity>
    </application>

</manifest>
