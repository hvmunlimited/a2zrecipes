<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.potterpcs.recipebook"
      android:versionName="1.0" android:versionCode="5">
    <uses-sdk android:targetSdkVersion="11" android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" android:name="RecipeBook">
        <activity android:name=".RecipeBookActivity"
                  android:label="@string/app_name" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <data android:scheme="content" android:host="net.potterpcs.recipebook"></data>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"></action>
            </intent-filter><meta-data android:name="android.app.searchable" android:resource="@xml/searchable"></meta-data>
        </activity>
        <activity android:name="RecipeViewer">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <data android:scheme="content" android:host="net.potterpcs.recipebook"></data>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name="RecipeEditor">
            <intent-filter>
                <action android:name="android.intent.action.INSERT_OR_EDIT"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
                <data android:scheme="content" android:host="net.potterpcs.recipebook"></data>
            </intent-filter>
        </activity>
        <activity android:name="RecipeFlipbook"></activity>
        <meta-data android:name="android.app.default_searchable" android:value=".RecipeBookActivity"/>
    </application>
</manifest>